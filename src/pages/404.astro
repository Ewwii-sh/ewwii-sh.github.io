---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="relative bg-[#121111] text-[#f5f5f5] py-24 px-6 text-center overflow-hidden">
    <div class="max-w-xl mx-auto">
      <h1 class="text-6xl font-extrabold mb-4 animate-bounce">404</h1>
      <h2 class="text-3xl font-semibold mb-6">Oops! Page not found.</h2>
      <p class="text-[#ccc] mb-8">
        The page you're looking for doesn't exist, or maybe it moved. But don't worry, we've got you covered.
      </p>
      <a 
        href="/" 
        class="inline-block bg-[#ff914c] hover:bg-[#d08f65] text-[#121111] px-8 py-3 rounded-lg font-semibold shadow-lg transform hover:-translate-y-1 hover:scale-105 transition"
      >
        Back to Home
      </a>
    </div>
  </section>

  <Footer />
</Layout>
