---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';


const tools = [
  {
    name: "Eiipm",
    description: "A simple and minimal package manager aiming to make ewwii more extensible.",
    link: "/eiipm"
  },
  {
    name: "XmlMan",
    description: "A fast and elegant xml to rhai transpiler built for ease of use and safety.",
    link: "/xmlman"
  },
  {
    name: "StaticScript",
    description: "Another compiler like xmlman which transpiles staticscript to rhai.",
    link: "/staticscript"
  },
];
---

<Layout>
  <section class="py-10 px-6">
    <div class="max-w-6xl mx-auto text-center mb-12">
      <span class="text-4xl font-extrabold tracking-tight bg-gradient-to-r text-gradient bg-clip-text text-transparent animate-gradient-x">
        Ewwii Ecosystem Tools
      </span>
      <p class="mt-3 mb-10" style="color: var(--text-gray)">
        Discover the tools that power the Ewwii ecosystem and streamline your workflow.
      </p>
      
      <!-- Return Home Button -->
      <a href="/" class="btn btn-outline-orange transition text-center">
          Return Home
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-6xl mx-auto">
      {tools.map(tool => (
        <a href={tool.link}><Card title={tool.name} description={tool.description} /></a>
      ))}
    </div>
  </section>

  <Footer />
</Layout>
